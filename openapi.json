  "paths": {
    "/api/health/": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Health Check",
        "description": "Health check endpoint.\n\nVerifies:\n- Database connectivity\n- Inbox directory write access\n- Vault directory write access\n\nReturns the status of each component.",
        "operationId": "health_check_api_health__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/api/notes/text": {
      "post": {
        "tags": [
          "notes"
        ],
        "summary": "Create Text Note",
        "description": "Create a new note from text content.\n\nThis endpoint bypasses audio transcription and directly creates a note\nwith the provided text content. The note will be marked as TRANSCRIBED\nand will proceed to LLM processing for summary and action item extraction.\n\nUseful for:\n- Quick testing without audio files\n- Direct text input from users\n- Importing text notes from other sources",
        "operationId": "create_text_note_api_notes_text_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NoteTextCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteRead"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/notes/audio": {
      "post": {
        "tags": [
          "notes"
        ],
        "summary": "Upload Audio Note",
        "description": "Upload an audio file to create a new note.\n\nThe audio file will be saved to the inbox directory and a database record\nwill be created with status UPLOADED. Background workers will process the\naudio for transcription and analysis.",
        "operationId": "upload_audio_note_api_notes_audio_post",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Body_upload_audio_note_api_notes_audio_post"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteRead"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/notes/": {
      "get": {
        "tags": [
          "notes"
        ],
        "summary": "List Notes",
        "description": "List recent notes with pagination.\n\nReturns a simplified view of notes ordered by creation time (newest first).",
        "operationId": "list_notes_api_notes__get",
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "title": "Skip"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100,
              "title": "Limit"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/NoteList"
                  },
                  "title": "Response List Notes Api Notes  Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/notes/{note_id}": {
      "get": {
        "tags": [
          "notes"
        ],
        "summary": "Get Note",
        "description": "Get full note details by ID.\n\nReturns complete note information including transcript, summary,\naction items, and metadata if available.",
        "operationId": "get_note_api_notes__note_id__get",
        "parameters": [
          {
            "name": "note_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Note Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoteRead"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
